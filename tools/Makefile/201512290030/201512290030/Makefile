# wikiapicpp toold building
#
# versionMajor = 201512290030
# versionMinor = 201512290030
#
# runing:
# make
#
# Public Domain by authors: Alexander Krassotkin (http://www.krassotkin.com/)
# since 2015-12-29

CC = g++
CFLAGS = -c -Wall -std=c++11
LDLIBS = -lcurl


PROJECT_HOME_DIR = ../../../../

API_DIR = $(PROJECT_HOME_DIR)api/
SHARED_DIR = $(PROJECT_HOME_DIR)shared/
TOOLS_DIR = $(PROJECT_HOME_DIR)tools/

JSON11_V = 201508191432/201508191432
JSON11_CPP_DIR = $(SHARED_DIR)json11.cpp/$(JSON11_V)/
JSON11_CPP = $(JSON11_CPP_DIR)json11.cpp
JSON11_HPP_DIR = $(SHARED_DIR)json11.hpp/$(JSON11_V)/
JSON11_HPP = $(JSON11_HPP_DIR)json11.hpp
JSON11_O_DIR = $(SHARED_DIR)json11.o/$(JSON11_V)/
JSON11_O = $(JSON11_O_DIR)json11.o

CURLWRAPPER_HPP_V = 201512290030/201512290030
CURLWRAPPER_HPP_DIR = $(SHARED_DIR)CurlWrapper.hpp/$(CURLWRAPPER_HPP_V)/
CURLWRAPPER_HPP = $(CURLWRAPPER_HPP_DIR)CurlWrapper.hpp

LOGININFO_HPP_V = 201512290030/201512290030
LOGININFO_HPP_DIR = $(API_DIR)LoginInfo.hpp/$(LOGININFO_HPP_V)/
LOGININFO_HPP = $(LOGININFO_HPP_DIR)LoginInfo.hpp

MEDIAWIKIACTIONAPI_HPP_V = 201512290030/201512290030
MEDIAWIKIACTIONAPI_HPP_DIR = $(API_DIR)MediaWikiActionAPI.hpp/$(MEDIAWIKIACTIONAPI_HPP_V)/
MEDIAWIKIACTIONAPI_HPP = $(MEDIAWIKIACTIONAPI_HPP_DIR)MediaWikiActionAPI.hpp

PAGEREVISIONS_HPP_V = 201512290030/201512290030
PAGEREVISIONS_HPP_DIR = $(API_DIR)PageRevisions.hpp/$(PAGEREVISIONS_HPP_V)/
PAGEREVISIONS_HPP = $(PAGEREVISIONS_HPP_DIR)PageRevisions.hpp

REVISION_HPP_V = 201512290030/201512290030
REVISION_HPP_DIR = $(API_DIR)Revision.hpp/$(REVISION_HPP_V)/
REVISION_HPP = $(REVISION_HPP_DIR)Revision.hpp

REVISIONS_HPP_V = 201512290030/201512290030
REVISIONS_HPP_DIR = $(API_DIR)Revisions.hpp/$(REVISIONS_HPP_V)/
REVISIONS_HPP = $(REVISIONS_HPP_DIR)Revisions.hpp

WIKICONSOLE_V = 201512290030/201512290030
WIKICONSOLE_DIR = $(TOOLS_DIR)wikiconsole/$(WIKICONSOLE_V)/
WIKICONSOLE = $(WIKICONSOLE_DIR)wikiconsole
WIKICONSOLE_CPP_DIR = $(TOOLS_DIR)wikiconsole.cpp/$(WIKICONSOLE_V)/
WIKICONSOLE_CPP = $(WIKICONSOLE_CPP_DIR)wikiconsole.cpp
WIKICONSOLE_O_DIR = $(TOOLS_DIR)wikiconsole.o/$(WIKICONSOLE_V)/
WIKICONSOLE_O = $(WIKICONSOLE_O_DIR)wikiconsole.o




HEADERS = $(CURLWRAPPER_HPP) $(JSON11_HPP) $(LOGININFO_HPP) $(MEDIAWIKIACTIONAPI_HPP) $(PAGEREVISIONS_HPP) $(REVISION_HPP) $(REVISIONS_HPP)

INCL = -I$(CURLWRAPPER_HPP_DIR) -I$(JSON11_HPP_DIR) -I$(LOGININFO_HPP_DIR) -I$(MEDIAWIKIACTIONAPI_HPP_DIR) -I$(PAGEREVISIONS_HPP_DIR) -I$(REVISION_HPP_DIR) -I$(REVISIONS_HPP_DIR)

OBJ =  $(JSON11_O) $(WIKICONSOLE_O)

BIN = $(WIKICONSOLE)




all: $(BIN)


$(WIKICONSOLE) : $(OBJ)
	$(CC) -o $(WIKICONSOLE) $(LDLIBS) $(OBJ)


$(WIKICONSOLE_O) : $(WIKICONSOLE_CPP) $(HEADERS)
	$(CC) $(CFLAGS) -o $(WIKICONSOLE_O) $(WIKICONSOLE_CPP) $(INCL)




$(JSON11_O) : $(JSON11_CPP) $(JSON11_HPP)
	$(CC) $(CFLAGS) -o $(JSON11_O) -I$(JSON11_HPP_DIR) $(JSON11_CPP)




clean:
	rm -rf $(BIN) $(OBJ)
 
